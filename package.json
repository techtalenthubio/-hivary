{
  "name": "@hivary/engine-utils",
  "license": "MIT",
  "version": "0.0.1",
  "author": "hivary",
  "description": "Public Packages that are used by the Hivary Engine",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "homepage": "https://github.com/techtalenthubio/engine-utils#readme",
  "keywords": [
    "nestjs",
    "hivary"
  ],
  "publishConfig": {
    "registry": "https://registry.npmjs.org",
    "access": "restricted"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/techtalenthubio/engine-utils.git"
  },
  "bugs": {
    "url": "https://github.com/techtalenthubio/engine-utils/issues"
  },
  "scripts": {
    "build": "tsup",
    "format": "prettier --write \"src/**/*.ts\"",
    "doc": "pnpm exec typedoc",
    "release": "pnpm format && pnpm run build && changeset publish",
    "lint": "tsc --noEmit && eslint \"src/**/*.ts\" --fix"
  },
  "tsup": {
    "entry": [
      "src/index.ts"
    ],
    "dts": true,
    "sourcemap": true,
    "format": [
      "cjs",
      "esm"
    ],
    "clean": true,
    "minify": true,
    "legacyOutput": true,
    "external": [
      "class-transformer",
      "class-validator",
      "hbs",
      "@nestjs/websockets/socket-module",
      "kafkajs",
      "ioredis",
      "mqtt",
      "nats",
      "amqplib",
      "amqp-connection-manager",
      "@grpc/grpc-js",
      "@grpc/proto-loader"
    ]
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@microsoft/tsdoc": "^0.14.2",
    "@mxssfd/typedoc-theme": "^1.1.3",
    "@nestjs/common": "^10.3.1",
    "@nestjs/core": "^10.3.1",
    "@nestjs/microservices": "^10.3.1",
    "@nestjs/passport": "^9.0.3",
    "@nestjs/platform-express": "^10.3.1",
    "@nestjs/testing": "^10.3.1",
    "@types/express": "4.16.1",
    "@types/node": "11.13.4",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "eslint": "^8.56.0",
    "eslint-plugin-tsdoc": "^0.2.17",
    "nestjs-i18n": "^10.4.0",
    "prettier": "3.2.4",
    "rxjs": "^7.8.1",
    "tsup": "^6.7.0",
    "typedoc": "^0.25.7",
    "typescript": "^5.3.3"
  }
}
